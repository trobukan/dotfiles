general {
  output_format = "i3bar"
  interval = 5
}

order += "ethernet eth0"
order += load
order += "disk /"
order += memory
order += "volume master"

volume master {
  format = "♪:%volume"
  format_muted = "♪:muted (%volume)"
  device = "default"
  mixer = "Master"
  mixer_idx = 0

}

disk "/" {
  format = "%avail"
}

memory {
  format = "%used"
  threshold_degraded = "10%"
  format_degraded = "MEMORY: %free"
}
